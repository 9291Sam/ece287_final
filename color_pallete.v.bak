module pallete(input[9:0] x, input[9:0] y, output reg [23:0] color);

parameter Width  = 160;
parameter Height = 120;


always @ (*)
    color = {
        (8'b0)[7:0],                                   // R
        ((x - 0) * (255 - 0) / (Width - 0) + 0)[7:0],  // G
        ((y - 0) * (255 - 0) / (Height - 0) + 0)[7:0], // B
    };


endmodule